function HC = histCost(SCx, SCy)
% Chi^2-Test zum Vergleich zweier Histogramme
    
    % TODO
    %HC = 0.5 * sum(sum((SCx - SCy).^2 ./ (SCx + SCy))); <== can't
    [m, n] = size(SCx);
    HC = 0;
    for i = 1:m
        for j = 1:n
            if (SCx(i, j) + SCy(i, j)) ~= 0
                HC = HC + 0.5*(SCx(i, j) - SCy(i, j))^2/(SCx(i, j) + SCy(i, j));
            end
        end
    end
    
end
